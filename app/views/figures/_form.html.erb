<%= form_with url: [@world, @figure], model: @figure, local: true do |f| %>
  <div class="form-group">
   <%= f.label :name %> 
   <% if @figure.name %>
     <%= f.text_field :name, autofocus: true, disabled: true, class: "form-control" %>
   <% else %>
     <%= f.text_field :name, autofocus: true, autocomplete: :title, class: "form-control" %>
   <% end %>
  </div>

  <div class="form-group">
   <%= f.label :description %>
   <%= f.text_area :description, autocomplete: :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control-file" %>
  </div>

  <%= f.submit t(:submit), class: "btn btn-primary btn-lg" %>
<% end %>
