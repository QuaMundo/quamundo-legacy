<%= content_for :figures do %>
  <div id="figures" class="card">

    <div id="figures-header" class="card-header">
      <button class="btn btn-link"
              type="button"
              data-toggle="collapse"
              data-target="#figures-collection"
              aria-expanded="true"
              aria-controls="figures-collection">
        <%= icon(:figure) %>
        &nbsp;
        <%= obj.count %>
        &nbsp;
        <%= Figure.model_name.human(count: obj.count).capitalize %>
      </button>
    </div>

    <div id="figures-collection"
         class="collapse"
         aria-labeled-by="figures-header"
         data-parent="#attributes">
      <div class="card-body">

        <%# Actual index list goes here %>
        <div class="row">
          <div class="col">

            <ul class="list-unstyled">
              <% obj.each do |figure| %> 
                <%= tag.li(class: 'media mb-4', id: element_id(figure)) do %>

                  <%# Image - Thumbnail %>
                  <%= tag.a(href: world_figure_path(figure.world, figure)) do %>
                    <% if figure.image.attached? %>
                      <%=
                        tag.img(
                          src: attached_img_path(
                            figure.image, { resize: "64x64^" }),
                          class: 'mr-3 q-media-img'
                        ) %>
                    <% else %>
                      <%= default_image(figure, 'mr-3 q-media-img-default') %>
                    <% end %>
                  <% end %>

                  <%# Body %>
                  <div class="media-body">
                    <h5 class="mb-1">
                      <%= icon(figure) { figure.name } %>
                    </h5>
                    <div class="small">
                      <%= figure.description %><br />
                      <%= link_to(t('show'), world_figure_path(figure.world, figure)) %>
                    </div>
                  </div>

                <% end %>
              <% end %>
            </ul>

          </div> 
        </div>
        <%# Actual index list ends here %>

        <div class="row">
          <div class="col text-right">
            <%= link_to(icon(:new), new_world_figure_path(@world)) %>
          </div>
        </div>

      </div>
    </div>

  </div>
<% end %>


