<%= form_with model: @world, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, autocomplete: "description", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control-file" %>
  </div>

  <%= f.submit t(:submit), class: "btn btn-primary btn-lg" %>
<% end %>

