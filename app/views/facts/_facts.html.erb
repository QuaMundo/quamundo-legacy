<%= content_for :facts do %>
  <div id="facts" class="card">

    <div id="facts-header" class="card-header">
      <button class="btn btn-link"
              type="button"
              data-toggle="collapse"
              data-target="#facts-collection"
              aria-expanded="true"
              aria-controls="facts-collection">
        <%= icon(:fact) %>
        &nbsp;
        <%= obj.count %>
        &nbsp;
        <%= Fact.model_name.human(count: obj.count).capitalize %>
      </button>
    </div>

    <div id="facts-collection"
         class="collapse"
         aria-labeled-by="facts-header"
         data-parent="#attributes">
      <div class="card-body">

        <%# Actual index list goes here %>
        <div class="row">
          <div class="col">

            <ul class="list-unstyled">
              <% obj.each do |fact| %> 
                <%= tag.li(class: 'media mb-4', id: element_id(fact)) do %>

                  <%# Image - Thumbnail %>
                  <%= tag.a(href: world_fact_path(fact.world, fact)) do %>
                    <% if fact.image.attached? %>
                      <%=
                        tag.img(
                          src: attached_img_path(
                            fact.image, { resize: "64x64^" }),
                          class: 'mr-3 q-media-img'
                        ) %>
                    <% else %>
                      <%= default_image(fact, 'mr-3 q-media-img-default') %>
                    <% end %>
                  <% end %>

                  <%# Body %>
                  <div class="media-body">
                    <h5 class="mb-1">
                      <%= icon(fact) { fact.name } %>
                    </h5>
                    <div class="small">
                      <%= fact.description %><br />
                      <%= link_to(t('show'), world_fact_path(fact.world, fact)) %>
                    </div>
                  </div>

                <% end %>
              <% end %>
            </ul>

          </div> 
        </div>
        <%# Actual index list ends here %>

        <div class="row">
          <div class="col text-right">
            <%= link_to(icon(:new), new_world_fact_path(@world)) %>
          </div>
        </div>

      </div>
    </div>

  </div>
<% end %>
