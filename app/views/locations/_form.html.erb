<%= form_with url: [@world, @location], model: @location, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, autocomplete: :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :lonlat %>
    <%= f.text_field :lonlat, autocomplete: :lonlat, class: 'form-control', value: get_lonlat(@location.lonlat) %>
  </div>

  <div class="form-group">
    <%# FIXME: DRY up - this is same in all inventory forms %>
    <% if @location.image.attached? %>
      <%= tag.img(
        src: attached_img_path(@location.image, combine_options: { resize: '80x60^', gravity: 'center' }),
        class: "img-fluid rounded float-right location-image",
        id: element_id(@location, 'img'),
        alt: "Bild: #{@location.name}") %>
    <% end %>
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control-file' %>
  </div>

  <%= f.submit t(:submit), class: 'btn btn-primary btn-lg' %>
<% end %>
