<%= content_for :relations do %>
  <div id="relations" class="card">

    <div id="relations-header" class="card-header">
      <button class="btn btn-link"
              type="button"
              data-toggle="collapse"
              data-target="#relations-collection"
              aria-expanded="true"
              aria-controls="relations-collection">
        <%= icon(:relation) %>
        &nbsp;
        <%= obj.count %>
        &nbsp;
        <%= Relation.model_name.human(count: obj.count).capitalize %>
      </button>
    </div>

    <div id="relations-collection"
         class="collapse"
         aria-labeled-by="relations-header"
         data-parent="#attributes">
      <div class="card-body">

        <%# Actual index list goes here %>
        <div class="row">
          <div class="col">

            <ul class="list-unstyled">
              <%= render partial: 'relations/index_entry', collection: obj %>
            </ul>

          </div> 
        </div>
        <%# Actual index list ends here %>

        <div class="row">
          <div class="col text-right">
            <%= link_to(
              icon(:new),
              new_world_fact_relation_path(@world, @fact)) %>
          </div>
        </div>

      </div>
    </div>

  </div>
<% end %>
