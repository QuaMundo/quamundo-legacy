<%= form_with(
  url: [@fact.world, @fact, @relation],
  model: @relation, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field(
      :name,
      autofocus: true,
      class: 'form-control') %>
  </div>

  <div class="form-group">
    <%= f.label :reverse_name %>
    <%= f.text_field(
      :reverse_name,
      autofocus: true,
      class: 'form-control') %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area(
      :description,
      autocomplete: :description,
      class: 'form-control') %>
  </div>

  <%# add relation constituents %>
  <%= render(
    partial: 'relation_constituents/relation_constituent_input',
    locals: { form: f, relation: @relation }) %>

  <%= f.submit t(:submit), class: 'btn btn-primary btn-lg' %>
<% end %>
