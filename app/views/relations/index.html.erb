<%= tag.div(id: 'relations', class: 'card') do %>
  <%# card header %>
  <div class="card-header">
    <div class="row">
      <div class="col-10">
        <h2 class="card-title mt-2">
          <%= icon(:relation) {
            Relation.model_name.human(count: @relations.count)
          } %>
        </h2>
      </div>
      <div class="col-2 text-right">
        <%= render partial: 'index_menu' %>
      </div>
    </div>
  </div>

  <%# card body %>
  <div class="card-body">
    <div class="row">
      <div class="col">
        <ul class="list-unstyled">
          <%= render partial: 'relations/index_entry', collection: @relations %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
