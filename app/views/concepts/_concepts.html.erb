<%= content_for :concepts do %>
  <div id="concepts" class="card">

    <div id="concepts-header" class="card-header">
      <button class="btn btn-link"
              type="button"
              data-toggle="collapse"
              data-target="#concepts-collection"
              aria-expanded="true"
              aria-controls="concepts-collection">
        <%= icon(:concept) %>
        &nbsp;
        <%= obj.count %>
        &nbsp;
        <%= Concept.model_name.human(count: obj.count).capitalize %>
      </button>
    </div>

    <div id="concepts-collection"
         class="collapse"
         aria-labeled-by="concepts-header"
         data-parent="#attributes">
      <div class="card-body">

        <%# Actual index list goes here %>
        <div class="row">
          <div class="col">

            <ul class="list-unstyled">
              <% obj.each do |concept| %> 
                <%= tag.li(class: 'media mb-4', id: element_id(concept)) do %>

                  <%# Image - Thumbnail %>
                  <%= tag.a(href: world_concept_path(concept.world, concept)) do %>
                    <% if concept.image.attached? %>
                      <%=
                        tag.img(
                          src: attached_img_path(
                            concept.image, { resize: "64x64^" }),
                          class: 'mr-3 q-media-img'
                        ) %>
                    <% else %>
                      <%= default_image(concept, 'mr-3 q-media-img-default') %>
                    <% end %>
                  <% end %>

                  <%# Body %>
                  <div class="media-body">
                    <h5 class="mb-1">
                      <%= icon(concept) { concept.name } %>
                    </h5>
                    <div class="small">
                      <%= concept.description %><br />
                      <%= link_to(t('show'), world_concept_path(concept.world, concept)) %>
                    </div>
                  </div>

                <% end %>
              <% end %>
            </ul>

          </div> 
        </div>
        <%# Actual index list ends here %>

        <div class="row">
          <div class="col text-right">
            <%= link_to(icon(:new), new_world_concept_path(@world)) %>
          </div>
        </div>

      </div>
    </div>

  </div>
<% end %>


