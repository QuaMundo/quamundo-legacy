<%= tag.div(
  id: element_id(index_entry),
  class: 'col-lg-3 col-md-4 col-sm-6 col-12 mb-2 note') do %>

  <%= tag.div(class: 'card bg-warning h-100') do %>
    <div class="card-body p-2">
      <p class="text-muted mb-1">
      <small>
        <%= icon(:note) %>
        <%= l(index_entry.created_at.localtime, format: :short)  %>
      </small>
      </p>
      <p><small><%= index_entry.content %></small></p>
    </div>
    <div class="card-footer bg-warning p-2">
      <nav class="nav notes-menu tiny-font">
        <%= link_to_if(
          allowed_to?(:destroy?, index_entry),
          icon(:delete),
          note_path(index_entry),
          id: element_id(index_entry, 'delete'),
          title: 'delete',
          class: 'nav-link p-2',
          method: :delete,
          data: { confirm: t('.confirm_delete') }) {} %>
        <%= link_to_if(
          allowed_to?(:edit?, index_entry),
          icon(:edit),
          edit_note_path(index_entry),
          id: element_id(index_entry, 'edit'),
          class: 'nav-link p-2') {} %>
      </nav>
    </div>
  <% end %>
<% end %>

