<%= content_for :items do %>
  <div id="items" class="card">

    <div id="items-header" class="card-header">
      <button class="btn btn-link"
              type="button"
              data-toggle="collapse"
              data-target="#items-collection"
              aria-expanded="true"
              aria-controls="items-collection">
        <%= icon(:item) %>
        &nbsp;
        <%= obj.count %>
        &nbsp;
        <%= Item.model_name.human(count: obj.count).capitalize %>
      </button>
    </div>

    <div id="items-collection"
         class="collapse"
         aria-labeled-by="items-header"
         data-parent="#attributes">
      <div class="card-body">

        <%# Actual index list goes here %>
        <div class="row">
          <div class="col">

            <ul class="list-unstyled">
              <% obj.each do |item| %> 
                <%= tag.li(class: 'media mb-4', id: element_id(item)) do %>

                  <%# Image - Thumbnail %>
                  <%= tag.a(href: world_item_path(item.world, item)) do %>
                    <% if item.image.attached? %>
                      <%=
                        tag.img(
                          src: attached_img_path(item.image, 64, 64),
                          class: 'mr-3 q-media-img'
                        ) %>
                    <% else %>
                      <%= default_image(item, 'mr-3 q-media-img-default') %>
                    <% end %>
                  <% end %>

                  <%# Body %>
                  <div class="media-body">
                    <h5 class="mb-1">
                      <%= icon(item) { item.name } %>
                    </h5>
                    <div class="small">
                      <%= item.description %><br />
                      <%= link_to(t('show'), world_item_path(item.world, item)) %>
                    </div>
                  </div>

                <% end %>
              <% end %>
            </ul>

          </div> 
        </div>
        <%# Actual index list ends here %>

        <div class="row">
          <div class="col text-right">
            <%= link_to(icon(:new), new_world_item_path(@world)) %>
          </div>
        </div>

      </div>
    </div>

  </div>
<% end %>

